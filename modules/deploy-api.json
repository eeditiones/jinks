{
    "components": {
        "securitySchemes": {
            "basicAuth": {
                "scheme": "basic",
                "type": "http"
            },
            "cookieAuth": {
                "in": "cookie",
                "name": "teipublisher.com.login",
                "type": "apiKey"
            }
        }
    },
    "info": {
        "title": "jinks API",
        "version": "1.0.0"
    },
    "openapi": "3.0.3",
    "paths": {
        "/api/generator/{profile}/deploy": {
            "post": {
                "description": "Deploy a profile. Call for new profiles, or to re-deploy a profile from scratch. Requires DBA privileges.",
                "operationId": "dep:deploy",
                "parameters": [
                    {
                        "name": "profile",
                        "in": "path",
                        "schema": {
                            "type": "string",
                            "example": "base"
                        },
                        "required": true,
                        "description": "The name of the profile to use"
                    }
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        },
                        "description": "OK"
                    }
                }
            }
        },
        "/api/actions/file-sync": {
            "post": {
                "description": "Sync changes in the app to a local file system",
                "tags": [
                    "actions"
                ],
                "operationId": "action:file-sync",
                "parameters": [
                    {
                        "name": "root",
                        "in": "query",
                        "description": "The root path of the app",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    },
                    {
                        "name": "target",
                        "in": "query",
                        "description": "The path to the target directory",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/actions/reindex": {
            "post": {
                "description": "Reindex the data collection",
                "tags": [
                    "actions"
                ],
                "operationId": "action:reindex",
                "parameters": [
                    {
                        "name": "root",
                        "in": "query",
                        "description": "The root path of the app",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/actions/download": {
            "post": {
                "summary": "Package and download app",
                "description": "Package up this application and return it as a `.xar`.",
                "tags": [
                    "actions"
                ],
                "operationId": "action:download-app",
                "parameters": [
                    {
                        "name": "root",
                        "in": "query",
                        "description": "The root path of the app",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "xar package (zip format) containing the app code",
                        "content": {
                            "application/zip": {
                                "schema": {
                                    "type": "string",
                                    "format": "binary"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "servers": [
        {
            "description": "Endpoint for testing on localhost",
            "url": "/exist/apps/jinks"
        }
    ],
    "security": [
        {
            "cookieAuth": []
        },
        {
            "basicAuth": []
        }
    ]
}