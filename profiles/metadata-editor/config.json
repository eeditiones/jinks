{
    "$schema": "../../schema/jinks.json",
    "type": "feature",
    "id": "https://e-editiones.org/app/tei-publisher/metadata-editor",
    "label": "Metadata Editor",
    "category": "workflow",
    "description": "Edit the teiHeader of TEI documents using a form-based editor",
    "version": "0.2.0",
    "depends": [
        "base10",
        "forms"
    ],
    "templating": {
        "use": [
            "templates/metadata-editor-blocks.html"
        ]
	},
    "api": [
        {
            "spec": "metadata-editor-api.json",
            "prefix": "meta",
            "path": "metadata-editor-api.xql",
            "id": "http://teipublisher.com/api/metadata-editor"
        }
    ],
    "theme": {
        "icons": [
            "metadata-editor-icons.svg"
        ]
    }
}
