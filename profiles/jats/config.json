{
    "$schema": "../../schema/jinks.json",
    "type": "feature",
    "id": "https://e-editiones.org/app/tei-publisher/jats",
    "label": "JATS support",
    "category": "input",
    "description": "Support for the Journal Article Tag Suite standard",
    "version": "1.0.0",
    "order": 2,
    "depends": [
        "base10"
    ],
    "defaults": {
        "template": "jats.html"
    },
    "indexing": {
        "jats": {
            "enable": true
        }
    },
    "odds": [ "jats.odd", "jats-annotations.odd" ],
    "collection-config": {
        "jats": {
            "odd": "jats.odd"
        }
    },
    "features": {
        "annotate": {
            "configs": {
                "jats": {
                    "key": "specific-use",
                    "id": "http://teipublisher.com/api/annotations/config/jats",
                    "path": "jats-annotation-config.xqm"
                }
            }
        }
    }
}