{
    "$schema": "../../schema/jinks.json",
    "type": "feature",
    "id": "https://e-editiones.org/app/tei-publisher/annotations",
    "version": "1.0.0",
    "label": "Annotation Editor",
    "description": "Creates an application for annotating TEI documents.",
    "category": "workflow",
    "depends": [
        "base10"
    ],
    "defaults": {
        "upload": "annotate"
    },
    "templating": {
        "use": [
            "templates/annotation-blocks.html"
        ]
    },
    "odds": [
        "annotations.odd"
    ],
    "styles": [
    ],
    "api": [
        {
            "prefix": "anno",
            "id": "http://teipublisher.com/api/annotations",
            "path": "annotations/annotations.xql",
            "spec": "annotations/api.json"
        }
    ],
    "features": {
        "annotate": {
            "configs": {
                "tei": {
                    "id": "http://teipublisher.com/api/annotations/config/tei",
                    "path": "tei-annotation-config.xqm"
                }
            }
        }
    }
}
