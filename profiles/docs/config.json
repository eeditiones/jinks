{
    "$schema": "../../schema/jinks.json",
    "type": "blueprint",
    "id": "https://e-editiones.org/app/tei-publisher/tei-publisher-docs",
    "label": "Documentation + Demo",
    "description": "TEI Publisher documentation and demo",
    "version": "1.0.0",
    "order": 101,
    "defaults": {
        "data-default": ""
    },
    "depends": [
        "base10",
        "docbook",
        "iiif",
        "jats",
        "docx",
        "demo-data"
    ],
    "pkg": {
        "abbrev": "tei-publisher-docs"
    },
    "collection-config": {
        "doc": {
            "odd": "docbook.odd",
            "template": "documentation.html"
        },
        "demo": {
            "template": "monograph.html"
        },
        "jats": {
            "odd": "jats.odd",
            "template": "jats.html"
        },
        "docx": {
            "odd": "docx-output.odd",
            "template": "docx.html"
        }
    },
    "menu": {
        "$replace": true,
        "items": [
            {
                "id": "Start",
                "url": ""
            },
            {
                "id": "documentation",
                "url": "documentation"
            },
            {
                "id": "news",
                "url": "https://www.e-editiones.org/tags/release"
            }
        ],
        "delete": true,
        "login": true,
        "search": true,
        "dark-mode": true,
		"language": true,
		"download": true
    },
    "generator": {
        "templates": {
            "config-odd-available": "xmldb:get-child-resources($config:odd-root)[ends-with(., '.odd')][. != 'teipublisher_odds.odd']"
        }
    },
    "api": [
        {
            "id": "http://teipublisher.com/api/documentation-and-demo",
            "path": "docs-api.xql",
            "spec": "docs-api.json",
            "prefix": "demo"
        }
    ],
    "static": {
        "$replace": true,
        "collections": {
            "doc": {
                "path-prefix": "",
                "index": false,
                "template": "static/templates/index.html",
                "paginate": {
                    "template": "static/templates/documentation.html",
                    "toc": true,
                    "parts": [
                        {
                            "odd": "docbook.odd"
                        },
                        {
                            "id": "breadcrumbs",
                            "user.mode": "breadcrumbs",
                            "odd": "docbook.odd"
                        }
                    ]
                }
            }
        },
        "redirect": {
            "": "1/index.html"
        },
        "styles": [
            "resources/css/static.css",
            "transform/docbook.css"
        ],
        "fields": {
            "index": ["content"],
            "store": ["content", "title", "link"]
        },
        "copy": [
            {
                "from": "data/doc",
                "to": "images",
                "filter": "\\.(?:png|jpg|jpeg|gif|svg)$"
            }
        ]
    }
}
