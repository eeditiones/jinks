{
    "$schema": "../../schema/jinks.json",
    "type": "theme",
    "id": "https://e-editiones.org/app/tei-publisher/theme-base10",
    "label": "Default Jinks theme",
    "description": "Includes style defaults",
    "order": 902,
    "version": "1.0.0",
    "theme": {
        "colors": {
            "palette": "neutral",
            "menubar": {
                "background-image": null,
                "background-color": "var(--jinks-colors-500)",
                "color": "#ffffff"
            },
            "palettes": {
                "blue": "palette-blue.css",
                "green": "palette-green.css",
                "beige": "palette-beige.css",
                "neutral": "palette-neutral.css",
                "teal": "palette-teal.css"
            }
        },
        "logo": {
            "light": "../images/tei-publisher-logo-contrast-color.svg",
            "dark": "../images/tei-publisher-logo-contrast-color.svg",
            "splash": {
                "light": "../images/tei-publisher-logo-color.svg",
                "dark": "../images/tei-publisher-logo-contrast-color.svg",
                "size": "360px auto"
            },
            "width": "140px",
            "height": "48px"
        },
        "fonts": {
            "base": {
                "family": "'Inter', 'Noto', sans-serif",
                "size": "16px",
                "line-height": "140%",
                "weight": "400"
            },
            "content": {
                "family": "JunicodeVF, Georgia, 'Times New Roman', serif",
                "size": "1.25rem",
                "line-height": "150%",
                "weight": "400"
            },
            "heading": {
                "family": "'Inter', 'Noto', sans-serif",
                "size": "1.2rem",
                "weight": "400"
            },
            "footnote": {
                "size": "0.9em"
            },
            "breadcrumbs": {
                "size": "0.9rem"
            },
            "menubar": {
                "size": "14px"
            },
            "toc": {
                "size": "1.125rem"
            }
        },
        "hero": {
            "background-image": "../images/typewriter.jpg",
            "background-size": "cover",
            "background-position": "center",
            "background-repeat": "no-repeat",
            "background-color": "rgba(0, 0, 0, 0.6)",
            "text-width": "50rem",
            "class": "row"
        },
        "bottom": {
            "background-image": "../images/typewriter-on-books.jpg",
            "background-size": "cover",
            "background-repeat": "no-repeat",
            "background-color": "rgba(0, 0, 0, 0.4)"
        },
        "header": {
            "background-image": null
        },
        "breadcrumbs": {
            "max": "40ch"
        },
        "texture": {
            "background-image": "../images/jinks-images/paper.jpeg"
        },
        "layout": {
            "class": "fixed-layout",
            "before-width": "min(30vw, 356px)",
            "after-width": "min(30vw, 356px)",
            "max-width": "108rem",
            "search": "before-top",
            "toggle-before": true
        }
    },
    "styles": [
        "resources/css/jinks-theme.css"
    ],
    "ignore": [
        "resources/css/components.css"
    ]
}
