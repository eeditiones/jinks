{
    "$schema": "../../schema/jinks.json",
    "type": "theme",
    "id": "https://e-editiones.org/app/tei-publisher/theme-base10",
    "label": "Default Jinks theme",
    "description": "Defines the default theme for TEI Publisher 10",
    "order": 902,
    "version": "1.0.0",
    "depends": [
        "base10"
    ],
    "theme": {
        "body": {
            "background-color": "var(--jinks-colors-100)"
        },
        "colors": {
            "palette": "neutral",
            "palettes": {
                "blue": "palette-blue.css",
                "green": "palette-green.css",
                "beige": "palette-beige.css",
                "neutral": "palette-neutral.css",
                "teal": "palette-teal.css"
            }
        },
        "content": {
            "max-width": "70ch"
        },
        "menubar": {
            "background-image": "none",
            "background-color": "var(--jinks-colors-500)",
            "color": "#ffffff"
        },
        "toolbar": {
            "background-color": "var(--jinks-colors-200)",
            "color": "var(--jinks-color-primary)"
        },
        "logo": {
            "image": "../images/tei-publisher-logo-contrast-color.svg",
            "width": "140px",
            "height": "48px"
        },
        "splash": {
            "image": "../images/tei-publisher-logo-color.svg",
            "width": "320px",
            "height": "auto"
        },
        "fonts": {
            "base": {
                "family": "'Inter', 'Noto', sans-serif",
                "size": "16px",
                "line-height": "1.4",
                "weight": "400"
            },
            "content": {
                "family": "JunicodeVF, Georgia, 'Times New Roman', serif",
                "size": "1.25rem",
                "line-height": "150%",
                "weight": "400"
            },
            "heading": {
                "family": "'Inter', 'Noto', sans-serif",
                "size": "1.2rem",
                "weight": "400"
            },
            "footnote": {
                "size": "0.9em"
            },
            "breadcrumbs": {
                "size": "0.9rem"
            },
            "menubar": {
                "size": "14px"
            },
            "toc": {
                "size": "1.125rem"
            }
        },
        "breadcrumbs": {
            "max": "40ch"
        },
        "texture": {
            "background-image": null
        },
        "layout": {
            "class": "fixed-layout",
            "max-width": "84rem",
            "search": "before-top",
            "before": {
                "hidden": false,
                "toggle": true,
                "width": "min(30vw, 356px)"
            },
            "after": {
                "hidden": false,
                "toggle": true,
                "width": "min(30vw, 356px)"
            },
            "footer": {
                "mobile": {
                    "enabled": true
                }
            }
        }
    },
    "styles": [
        "resources/css/pico-components.css",
        "resources/css/jinks-theme.css"
    ],
    "ignore": [
        "resources/css/components.css"
    ]
}
