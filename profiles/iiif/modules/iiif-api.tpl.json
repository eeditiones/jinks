{
    "openapi": "3.0.3",
    "info": {
        "version": "1.0.0",
        "title": "[[ head(($pkg?title, $label)) ]] â€“ IIIF API",
        "description": "Provides an endpoint to generate IIIF presentation manifests for TEI documents"
    },
    "servers": [
        {
            "description": "Endpoint for testing on localhost",
            "url": "/exist/apps/[[$pkg?abbrev]]"
        }
    ],
    "components": {
        "securitySchemes": {
            "basicAuth": {
                "type": "http",
                "scheme": "basic"
            },
            "cookieAuth": {
                "type": "apiKey",
                "name": "teipublisher.com.login",
                "in": "cookie"
            }
        }
    },
    "tags": [
        {
            "name": "iiif",
            "description": "Generate IIIF manifests"
        }
    ],
    "paths": {
        "/api/facsimiles/{path}": {
            "get": {
                "summary": "Retrieve the links to the facsimiles (info.json) that a manuscript references",
                "operationId": "iiif:facsimiles",
                "tags": ["iiif"],
                "parameters": [
                    {
                        "name": "path",
                        "in": "path",
                        "required": true,
                        "description": "The path to the document for which manifests should be retrieved",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The facsimiles, per milestone",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "additionalProperties": {
                                        "type": "string",
                                        "description": "The absolute location of the facsimile of that page"
                                    }
                                },
                                "example": {
                                    "https://apps.existsolutions.com/cantaloupe/iiif/2/15929_000_IDL5772_BOss12034_IIIp79.jpg/info.json": "https://apps.existsolutions.com/cantaloupe/iiif/2/15929_000_IDL5772_BOss12034_IIIp79.jpg/info.json",
                                    "15929_000_IDL5772_BOss12034_IIIp79.jpg": "https://apps.existsolutions.com/cantaloupe/iiif/2/15929_000_IDL5772_BOss12034_IIIp79.jpg/info.json",
                                    "#p79": "https://apps.existsolutions.com/cantaloupe/iiif/2/15929_000_IDL5772_BOss12034_IIIp79.jpg/info.json"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/iiif/{path}": {
            "get": {
                "summary": "Retrieve IIIF presentation manifest for document",
                "operationId": "iiif:manifest",
                "tags": ["iiif"],
                "parameters": [
                    {
                        "name": "path",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "IIIF manifest",
                        "content": {
                            "application/ld+json": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "security": [
        {
            "cookieAuth": []
        },
        {
            "basicAuth": []
        }
    ]
}
