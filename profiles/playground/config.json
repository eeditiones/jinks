{
    "$schema": "../../schema/jinks.json",
    "type": "blueprint",
    "id": "https://e-editiones.org/app/tei-publisher/playground",
    "label": "Playground",
    "description": "Sandbox environment for experimentation and learning",
    "version": "1.0.0",
    "depends": [
        "base10",
        "demo-data",
        "upload"
    ],
    "order": 100,
    "defaults": {
        "data-default": "playground",
        "template": "basic.html"
    },
    "features": {
        "playground": {
            "enabled": false
        },
        "toc": {
            "enabled": true
        },
        "upload": {
            "enabled": true
        }
    },
    "theme": {
        "colors": {
            "palette": "beige"
        }
    },
    "generator": {
        "templates": {
            "config-odd-available": "xmldb:get-child-resources($config:odd-root)[ends-with(., '.odd')][not(. = ('teipublisher_odds.odd', 'teilite.odd'))]"
        }
    },
    "templating": {
        "use": [
            "templates/playground-blocks.html"
        ]
    }
}
