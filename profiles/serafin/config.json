{
    "$schema": "../../schema/jinks.json",
    "type": "blueprint",
    "id": "https://e-editiones.org/app/tei-publisher/serafin",
    "label": "Serafin Correspondence",
    "description": "A blueprint for the correspondence of Miko≈Çaj Serafin",
    "version": "1.0.0",
    "depends": [
        "base10",
        "demo-data",
        "registers",
        "edition-navigation",
        "timeline"
    ],
    "order": 11,
    "odds": [
        "serafin.odd"
    ],
    "defaults": {
        "$replace": [ "media" ],
        "data-default": "letters",
        "template": "serafin.html",
        "odd": "serafin.odd",
        "media": ["web", "print", "fo", "epub"]
    },
    "i18n": [
        "serafin"
    ],
    "features": {
        "toc": {
            "enabled": false
        },
        "edition-navigation": {
            "navigation": true,
            "in-correspondence": true
        },
        "timeline": {
            "document-view": true
        },
        "browse": {
            "sort": {
                "default": "date",
                "options": [
                    {
                        "value": "date",
                        "key": "browse.date",
                        "label": "Date"
                    }
                ]
            }
        }
    },
    "theme": {
        "logo": {
            "width": "48px",
            "dark": "../images/base_icon_transparent_background.svg",
            "splash": {
                "dark": "../images/animation_serafin.gif",
                "light": "../images/animation_serafin.gif"
            },
            "light": "../images/base_icon_transparent_background.svg"
        },
        "layout": {
            "search": "before",
            "before-width": "min(30vw, 420px)"
        },
        "colors": {
            "palette": "dark"
        }
    },
    "static": {
        "collections": {
            "letters": {
                "path-prefix": "letters",
                "index": "single",
                "template": "static/templates/index.html",
                "paginate": {
                    "template": "static/templates/serafin.html",
                    "toc": false,
                    "parts": [
                        {
                            "odd": "serafin.odd",
                            "view": "single"
                        }
                    ]
                }
            }
        }
    }
}