{
    "$schema": "../../schema/jinks.json",
    "type": "blueprint",
    "id": "https://e-editiones.org/app/tei-publisher/serafin",
    "label": "Serafin Correspondence",
    "description": "A blueprint for the correspondence of Miko≈Çaj Serafin",
    "version": "1.0.0",
    "depends": [
        "base10",
        "registers",
        "edition-navigation",
        "timeline"
    ],
    "order": 11,
    "odds": [
        "serafin.odd"
    ],
    "defaults": {
        "$replace": [ "media" ],
        "data-default": "letters",
        "template": "serafin.html",
        "browse": "browse-custom.html",
        "odd": "serafin.odd",
        "media": ["web", "print", "fo", "epub"]
    },
    "i18n": [
        "serafin"
    ],
    "features": {
        "toc": {
            "enabled": false
        },
        "browse": {
            "sort": {
                "default": "date",
                "options": [
                    {
                        "value": "date",
                        "key": "browse.date",
                        "label": "Date"
                    }
                ]
            }
        }
    },
    "collection-config": {
        "auxiliary": {
            "template": "basic.html"
        }
    },
    "menu": {
        "items": [
            {
                "id": "about",
                "url": "auxiliary/about.xml"
            }
        ]
    },
    "theme": {
        "logo": {
            "width": "48px",
            "dark": "../images/base_icon_transparent_background.svg",
            "splash": {
                "dark": "../images/animation_serafin.gif",
                "light": "../images/animation_serafin.gif"
            },
            "light": "../images/base_icon_transparent_background.svg"
        },
        "layout": {
            "search": "before",
            "before-width": "min(30vw, 420px)"
        },
        "colors": {
            "palettes": {
                "dark": "palette-dark.css"
            },
            "palette": "dark"
        }
    },
    "static": {
        "templating": {
            "use": [
                "static/templates/register-static-blocks.html"
            ]
        },
        "collections": {
            "": {
                "path-prefix": "letters",
                "index": "single",
                "template": "static/templates/index.html",
                "paginate": {
                    "template": "static/templates/serafin.html",
                    "toc": false,
                    "parts": [
                        {
                            "odd": "serafin.odd",
                            "view": "single",
                            "xpath": "//text[@type = 'source']"
                        },
                        {
                            "id": "translation",
                            "xpath": "//text[@type = 'translation']",
                            "odd": "serafin.odd",
                            "view": "single"
                        },
                        {
                            "id": "breadcrumb",
                            "view": "single",
                            "odd": "serafin.odd",
                            "user.mode": "breadcrumb"
                        },
                        {
                            "id": "register",
                            "odd": "serafin.odd",
                            "user.mode": "register"
                        }
                    ]
                }
            }
        },
        "redirect": {
            "": "1/index.html"
        },
        "fields": {
            "index": [
                "content",
                "translation",
                "commentary"
            ],
            "store": [
                "content",
                "translation",
                "commentary",
                "title",
                "link",
                "places"
            ]
        },
        "facets": [
            "places"
        ],
        "styles": [
            "resources/css/static.css",
            "transform/serafin.css"
        ]
    },
    "api": [
        {
            "prefix": "ridx",
            "path": "serafin-static-index.xql",
            "id": "http://tei-publisher.com/jinks/serafin/index"
        }
    ]
}