{
    "$schema": "../../schema/jinks.json",
    "type": "base",
    "id": "https://e-editiones.org/app/tei-publisher/base",
    "version": "1.0.0",
    "label": "TEI Publisher Base",
    "description": "Base profile for a TEI Publisher 10 application. Not usable on its own.",
    "order": 0,
    "pkg": {
        "abbrev": "tei-publisher-base",
        "version": "1.0.0",
        "website": "http://tei-publisher.com",
        "user": {
            "name": "tei",
            "group": "tei",
            "password": "simple"
        },
        "permissions": "rw-r--r--"
    },
    "templating": {
        "modules": {
            "http://teipublisher.com/ns/templates/page": {
                "prefix": "page",
                "at": "modules/templates/page.xqm"
            },
            "http://teipublisher.com/ns/templates/browse": {
                "prefix": "browse",
                "at": "modules/templates/browse.xqm"
            }
        }
    },
    "script": {
        "webcomponents": "2.26.0-next-3.10",
        "extra-components": [],
        "cdn": "https://cdn.jsdelivr.net/npm/@teipublisher/pb-components",
        "custom": []
    },
    "styles": [
        "resources/css/pico-components.css",
        "https://cdn.jsdelivr.net/npm/theme-toggles@4.10.1/css/classic.min.css"
    ],
    "defaults": {
        "data": "data",
        "landing": "browse.html",
        "view": "div",
        "search": "div",
        "odd": "teipublisher.odd",
        "odd-root": "resources/odd",
        "template": "basic.html",
        "media": ["web", "print", "fo", "latex", "epub"],
        "direction": "ltr",
        "pagination": {
            "depth": 10,
            "fill": 5
        }
    },
    "indexing": {
        "jats": {
            "enable": true
        },
        "docbook": {
            "enable": true
        },
        "tei": {
            "enable": true,
            "context": "div"
        }
    },
    "features": {
        "toolbar": {
            "enabled": true,
            "zoom": true,
            "navigation": true,
            "parent": true
        },
        "menubar": true,
        "toc": {
            "collapse": false,
            "enabled": false
        },
        "hero": false,
        "upload": true
    },
    "odds": [
        "teipublisher.odd"
    ],
    "ignore": [
        "repo.xml"
    ],
    "skip": [
        "^doc/.*$"
    ],
    "menu": {
        "items": [
            {
                "id": "Start",
                "url": ""
            }
        ],
        "delete": true,
        "login": true,
        "search": true,
        "dark-mode": true,
		"language": true,
		"download": true
    },
    "address-by-id": false,
    "actions": [
        {
            "name": "reindex",
            "description": "Reindex data"
        },
        {
            "name": "fix-odds",
            "description": "Fix ODDs"
        }
    ]
}
