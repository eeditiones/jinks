{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://tei-publisher.org/jinks/config/schema",
    "type": "object",
    "description": "Schema for jinks configuration files",
    "properties": {
        "id": {
            "type": "string",
            "format": "url",
            "description": "Unique URI used to identify the application or profile"
        },
        "type": {
            "type": "string",
            "enum": ["base", "feature", "theme", "blueprint", "disabled"],
            "completionDetail": "Type of the profile"
        },
        "label": {
            "type": "string",
            "description": "A short title describing the application or profile"
        },
        "description": {
            "type": "string",
            "description": "Longer description of the application or profile"
        },
        "version": {
            "type": "string",
            "description": "Version of this profile. Use to keep track of different upstream profile versions.",
            "default": "1.0.0"
        },
        "extends": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Path to the profile this profile extends, relative to the root of the application."
        },
        "order": {
            "type": "integer",
            "description": "Defines the position of this profile in the list of extended profiles. To import a profile right on top of base, i.e. before any other profile, use 1.",
            "default": 100
        },
        "depends": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Lists other profiles this profile depends on to work properly."
        },
        "ignore": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "List of regular expressions matching relative paths to files, which should not be checked for conflicts. Those files are always overwritten, even if they have local changes."
        },
        "skip": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "List of regular expressions matching relative target paths to files, which should not be copied into the target application."
        },
        "skipSource": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "List of regular expressions matching the source path of files, which should not be copied into the target application."
        },
        "actions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "description": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    }
                },
                "required": [
                    "description",
                    "name"
                ]
            }
        },
        "profiles": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "odds": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "List of ODDs used by this profile"
        },
        "defaults": {
            "type": "object",
            "properties": {
                "search": {
                    "type": "string"
                },
                "landing": {
                    "type": "string",
                    "description": "The HTML page to use as landing page. Will be renamed to index.html. Path is relative to the `templates` subdirectory."
                },
                "browse": {
                    "type": "string",
                    "description": "The HTML page to use for browse available document collections. Path is relative to the `templates` subdirectory."
                },
                "view": {
                    "type": "string",
                    "enum": ["div", "page", "single"]
                },
                "media": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "List of output media types supported for display",
                    "examples": [
                        "web",
                        "print",
                        "fo",
                        "latex",
                        "epub"
                    ]
                },
                "template": {
                    "type": "string",
                    "description": "The HTML template to use for rendering content pages. Should reside in `templates/pages`"
                },
                "odd": {
                    "type": "string",
                    "description": "The ODD to use if no other is selected"
                },
                "language": {
                    "type": "string",
                    "description": "Default language pre-selected for the app"
                },
                "data": {
                    "type": "string",
                    "description": "Absolute or relative path to the root collection containing all data used by the app."
                },
                "data-default": {
                    "type": "string",
                    "description": "Absolute or relative path to the collection used for locating XML documents which can be displayed to users. If not specified, defaults to the collection given in `defaults.data`. A relative path will be interpreted relative to `defaults.data`. Use this if documents exposed to users reside in a subcollection below `defaults.data`, but users should not the the subcollection path."
                },
                "pagination": {
                    "type": "object",
                    "properties": {
                        "fill": {
                            "type": "integer"
                        },
                        "depth": {
                            "type": "integer"
                        }
                    }
                },
                "address-by-id": {
                    "type": "boolean"
                },
                "sort": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "field": {
                                "type": "string"
                            },
                            "label": {
                                "type": "string"
                            },
                            "default": {
                                "type": "boolean"
                            }
                        }
                    },
                    "description": "The fields to sort by default when displaying list of documents"
                }
            }
        },
        "collection-config": {
            "type": "object",
            "patternProperties": {
                "^[^\\s]+$": {
                    "type": "object",
                    "properties": {
                        "odd": {
                            "type": "string"
                        },
                        "template": {
                            "type": "string"
                        },
                        "view": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": true
                }
            }
        },
        "menu": {
            "type": "object",
            "properties": {
                "language": {
                    "type": "boolean"
                },
                "delete": {
                    "type": "boolean"
                },
                "dark-mode": {
                    "type": "boolean"
                },
                "items": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "url": {
                                "type": ["string", "null"],
                                "description": "URL to link to. Might be null to remove an item inherited from a parent profile."
                            },
                            "id": {
                                "type": "string"
                            },
                            "subitems": {
                                "type": "array",
                                "description": "Secondary menu displayed as a dropdown list. The submenu gets created if the parent item does not have an 'url' property.",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                            },
                                        "url": {
                                            "type": ["string", "null"],
                                            "description": "URL to link to. Might be null to remove an item inherited from a parent profile."
                                        }
                                    },
                                "required": [
                                    "id",
                                    "url"
                                    ]
                                }
                            }
                        },
                        "required": [
                            "id"
                        ]
                    }
                },
                "login": {
                    "type": "boolean"
                },
                "download": {
                    "type": "boolean"
                },
                "search": {
                    "type": "boolean"
                }
            }
        },
        "features": {
            "type": "object",
            "properties": {
                "menubar": {
                    "type": "boolean"
                },
                "toolbar": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "description": "If true, the toolbar will be displayed"
                        },
                        "zoom": {
                            "type": "boolean",
                            "description": "If true, zoom buttons will be displayed"
                        },
                        "navigation": {
                            "type": "boolean",
                            "description": "If true, navigation buttons will be displayed"
                        },
                        "progress": {
                            "type": "object",
                            "description": "The channel on which the progress bar should listen for updates",
                            "properties": {
                                "subscribe": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "toolbar-toggles": {
                    "type": "object",
                    "description": "Properties for the toolbar toggles",
                    "properties": { 
                        "enabled": {
                            "type": "boolean",
                            "description": "If true, the toolbar toggles will be displayed"
                        },
                        "toggle-reading": {
                            "type": "boolean",
                            "description": "If true, the toggle to switch on the reading version will be enabled (very plain edited text)"
                        }
                    }
                },
                "hero": {
                    "type": "boolean"
                },
                "toc": {
                    "type": "object",
                    "properties": {
                        "collapse": {
                            "type": "boolean",
                            "description": "If true, table of contents items will be initially collapsed"
                        },
                        "enabled": {
                            "type": "boolean",
                            "description": "If true, the table of contents will be displayed"
                        }
                    }
                },
                "browse": {
                    "type": "object",
                    "properties": {
                        "sort": {
                            "type": "object",
                            "properties": {
                                "options": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "value": {
                                                "type": "string"
                                            },
                                            "key": {
                                                "type": "string"
                                            },
                                            "label": {
                                                "type": "string"
                                            }
                                        },
                                        "required": [
                                            "value",
                                            "key"
                                        ]
                                    }
                                }
                            }
                        },
                        "field": {
                            "type": "object",
                            "properties": {
                                "options": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "value": {
                                                "type": "string"
                                            },
                                            "key": {
                                                "type": "string"
                                            },
                                            "label": {
                                                "type": "string"
                                            }
                                        },
                                        "required": [
                                            "value",
                                            "key"
                                        ]
                                    }
                                }
                            }
                        }
                    }
                },
                "timeline": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "description": "If true, the timeline will be displayed"
                        },
                        "document-view": {
                            "type": "boolean",
                            "description": "If true, the timeline will also be displayed in document view. If false, it is only visible when browsing a collection."
                        }
                    }
                },
                "register": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "description": "If true, the entity register sidebar will be displayed"
                        },
                        "placement": {
                            "type": "string",
                            "enum": ["left", "right"]
                        }
                    }
                },
                "iiif": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "description": "If true, a IIIF viewer will be displayed in the right sidebar."
                        },
                        "viewer": {
                            "type": "string",
                            "description": "The viewer to use",
                            "enum": ["pb-tify", "pb-facsimile"]
                        },
                        "type": {
                            "type": "string",
                            "description": "Type of the source of the images: either 'iiif' or 'image' (for simple image links not served via IIIF).",
                            "enum": ["iiif", "image"]
                        }
                    }
                },
                "edition-navigation": {
                    "type": "object",
                    "properties": {
                        "navigation": {
                            "type": "boolean"
                        },
                        "in-correspondence": {
                            "type": "boolean",
                            "description": "If true, shows additional navigation for letter exchange between two specific correspondents"
                        }
                    }
                },
                "upload": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "description": "If true, the upload form will be displayed"
                        },
                        "target": {
                            "type": "string",
                            "description": "The target collection to upload documents to"
                        },
                        "accept": {
                            "type": "string",
                            "description": "The file extensions accepted for uploading"
                        }
                    }
                },
                "jinntap": {
                    "type": "object",
                    "properties": {
                        "version": {
                            "type": "string",
                            "description": "The version of Jinntap",
                            "examples": [ "dev", "1.24.0" ]
                        },
                        "cdn": {
                            "type": "string",
                            "description": "The CDN URL for Jinntap",
                            "examples": [ "http://localhost:5174/" ]
                        },
                        "schema": {
                            "type": "string",
                            "description": "The schema to use for the editor",
                            "examples": [ "resources/schema/schema.json" ]
                        }
                    }
                },
                "collab": {
                    "type": "object",
                    "description": "Configures the collaboration server for JinnTap",
                    "properties": {
                        "enable": {
                            "type": "boolean"
                        },
                        "server": {
                            "type": "string",
                            "description": "The server to use for collaboration",
                            "examples": [ "ws://localhost:8082" ]
                        }
                    }
                },
                "docs": {
                    "type": "object",
                    "properties": {
                        "read-only": {
                            "type": "boolean"
                        }
                    },
                    "description": "If true, upload and ODD management will be disabled"
                }
            }
        },
        "theme": { 
            "type": "object",
            "properties": {
                "logo": {
                    "type": "object",
                    "properties": {
                        "width": {
                            "type": "string"
                        },
                        "height": {
                            "type": "string"
                        },
                        "dark": {
                            "type": "string"
                        },
                        "splash": {
                            "type": "object",
                            "properties": {
                                "dark": {
                                    "type": "string"
                                },
                                "light": {
                                    "type": "string"
                                }
                            }
                        },
                        "light": {
                            "type": "string"
                        }
                    }
                },
                "colors": {
                    "type": "object",
                    "properties": {
                        "palette": {
                            "type": "string",
                            "examples": ["neutral", "green", "beige"]
                        },
                        "menubar": {
                            "type": "object",
                            "properties": {
                                "background-image": {
                                    "type": ["string", "null"]
                                },
                                "background-color": {
                                    "type": "string"
                                },
                                "color": {
                                    "type": "string"
                                }
                            }
                        },
                        "toolbar": {
                            "type": "object",
                            "properties": {
                                "background": {
                                    "type": "string"
                                },
                                "color": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "fonts": {
                    "type": "object",
                    "properties": {
                        "content": {
                            "type": "object",
                            "properties": {
                                "family": {
                                    "type": "string"
                                },
                                "size": {
                                    "type": "string"
                                },
                                "weight": {
                                    "type": "string"
                                }
                            }
                        },
                        "base": {
                            "type": "object",
                            "properties": {
                                "family": {
                                    "type": "string"
                                },
                                "size": {
                                    "type": "string"
                                },
                                "weight": {
                                    "type": "string"
                                }
                            }
                        },
                        "heading": {
                            "type": "object",
                            "properties": {
                                "family": {
                                    "type": "string"
                                },
                                "size": {
                                    "type": "string"
                                },
                                "weight": {
                                    "type": "string"
                                }
                            }
                        },
                        "footnote": {
                            "type": "object",
                            "properties": {
                                "size": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "breadcrumbs": {
                    "type": "object",
                    "properties": {
                        "max": {
                            "type": "string",
                            "description": "max length of the breadcrumbs in the toolbar",
                            "examples": [ "40ch"]
                        }
                    }
                },
                "layout": {
                    "type": "object",
                    "properties": {
                        "class": {
                            "type": "string",
                            "description": "Class to add to the main container element of the page",
                            "examples": [
                                "fixed-layout"
                            ]
                        },
                        "before-width": {
                            "type": "string",
                            "description": "Width of the left sidebar",
                            "examples": [
                                "min(30vw, 356px)"
                            ]
                        },
                        "after-width": {
                            "type": "string",
                            "description": "Width of the right sidebar",
                            "examples": [
                                "min(30vw, 356px)"
                            ]
                        }
                    }
                }
            }
        },
        "overwrite": {
            "type": "string"
        },
        "pkg": {
            "type": "object",
            "description": "For installable applications: defines the properties required by eXist's package manager to handle installation",
            "properties": {
                "website": {
                    "type": "string"
                },
                "abbrev": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "permissions": {
                    "type": "string"
                },
                "user": {
                    "type": "object",
                    "properties": {
                        "password": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        },
                        "group": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "group",
                        "name",
                        "password"
                    ]
                }
            }
        },
        "generator": {
            "type": "object",
            "properties": {
                "templates": {
                    "type": "object",
                    "patternProperties": {
                        "^[^\\s]+$": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "templating": {
            "type": "object",
            "properties": {
                "extends": {
                    "type": "string",
                    "description": "Path to the template to extend"
                },
                "use": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "List of template definitions to consult when expanding blocks"
                },
                "ignoreImports": {
                    "type": "boolean"
                },
                "strip-root": {
                    "type": "boolean",
                    "description": "If true, the root element of the imported template will be stripped. Use this if the imported template is a complete HTML document."
                },
                "modules": {
                    "type": "object",
                    "patternProperties": {
                        "^https?://.*": {
                            "type": "object",
                            "properties": {
                                "at": {
                                    "type": "string"
                                },
                                "prefix": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "at",
                                "prefix"
                            ]
                        }
                    }
                },
                "namespaces": {
                    "type": "object",
                    "patternProperties": {
                        "^[\\d._\\-]+$": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "script": {
            "type": "object",
            "properties": {
                "custom": {
                    "type": "array"
                },
                "webcomponents": {
                    "type": "string",
                    "description": "Version of the tei-publisher-components package to use or 'dev' to connect to a development server"
                },
                "extra-components": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Names of additional components to load from tei-publisher-components",
                    "examples": [
                        "pb-tify",
                        "pb-leaflet-map"
                    ]
                },
                "cdn": {
                    "type": "string",
                    "description": "URL of the CDN to use for web components",
                    "examples": [
                        "https://cdn.jsdelivr.net/npm/@teipublisher/pb-components",
                        "http://localhost:8000"
                    ]
                }
            }
        },
        "styles": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "i18n": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "api": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "spec": {
                        "type": "string"
                    },
                    "prefix": {
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string"
                    }
                }
            }
        },
        "static": {
            "type": "object",
            "properties": {
                "fields": {
                    "type": "object",
                    "properties": {
                        "index": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "store": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "redirect": {
                    "type": "object",
                    "properties": {
                        "": {
                            "type": "string"
                        }
                    }
                },
                "styles": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "facets": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "collections": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "object",
                        "properties": {
                            "index": {
                                "type": ["string", "boolean"]
                            },
                            "path-prefix": {
                                "type": "string"
                            },
                            "paginate": {
                                "type": "object",
                                "properties": {
                                    "toc": {
                                        "type": "boolean"
                                    },
                                    "parts": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "xpath": {
                                                    "type": "string"
                                                },
                                                "odd": {
                                                    "type": "string"
                                                },
                                                "id": {
                                                    "type": "string"
                                                },
                                                "user.mode": {
                                                    "type": "string"
                                                },
                                                "view": {
                                                    "type": "string"
                                                }
                                            },
                                            "required": [
                                                "odd"
                                            ]
                                        }
                                    },
                                    "template": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "parts",
                                    "template",
                                    "toc"
                                ]
                            },
                            "template": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "index",
                            "paginate",
                            "template"
                        ]
                    }
                },
                "copy": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "from": {
                                "type": "string"
                            },
                            "to": {
                                "type": "string"
                            },
                            "filter": {
                                "type": "string",
                                "description": "Optional filter to apply when copying files"
                            }
                        }
                    }
                }
            }
        },
        "urls": {
            "type": "object",
            "properties": {
                "template": {
                    "type": "string",
                    "description": "Pattern to use for URLs as required by pb-page/@url-template"
                },
                "ignore": {
                    "type": "string",
                    "description": "Comma-separated list of parameters to ignore in URLs as required by pb-page/@url-ignore"
                }
            }
        }
    },
    "additionalProperties": true,
    "patternProperties": {
        ".*": {
            "type": "object",
            "properties": {
                "$replace": {
                    "type": ["boolean", "array"],
                    "description": "If true, the object will not be merged with inherited configurations, but simply replace all of them. If an array, only the specified keys will be replaced, the rest merged."
                }
            },
            "additionalProperties": true
        }
    },
    "required": [
        "id",
        "label",
        "type"
    ]
}
